{
  "openapi": "3.0.0",
  "info": {
    "title": "Sales Service API",
    "description": "API para gerenciamento de vendas",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:8001",
      "description": "Servidor de desenvolvimento"
    }
  ],
  "paths": {
    "/health": {
      "get": {
        "summary": "Verifica a saúde do serviço",
        "responses": {
          "200": {
            "description": "Serviço está saudável",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "healthy"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/sales": {
      "get": {
        "summary": "Lista todas as vendas",
        "responses": {
          "200": {
            "description": "Lista de vendas",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Sale"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Cria uma nova venda",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SaleCreate"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Venda criada com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Sale"
                }
              }
            }
          }
        }
      }
    },
    "/sales/{sale_id}": {
      "get": {
        "summary": "Obtém uma venda por ID",
        "parameters": [
          {
            "name": "sale_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Detalhes da venda",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Sale"
                }
              }
            }
          }
        }
      },
      "put": {
        "summary": "Atualiza uma venda",
        "parameters": [
          {
            "name": "sale_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/SaleUpdate"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Venda atualizada com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Sale"
                }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "Remove uma venda",
        "parameters": [
          {
            "name": "sale_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Venda removida com sucesso"
          }
        }
      }
    },
    "/sales/vehicle/{vehicle_id}": {
      "get": {
        "summary": "Obtém uma venda por ID do veículo",
        "parameters": [
          {
            "name": "vehicle_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Detalhes da venda",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Sale"
                }
              }
            }
          }
        }
      }
    },
    "/sales/payment/{payment_code}": {
      "get": {
        "summary": "Obtém uma venda por código de pagamento",
        "parameters": [
          {
            "name": "payment_code",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Detalhes da venda",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Sale"
                }
              }
            }
          }
        }
      }
    },
    "/sales/status/{status}": {
      "get": {
        "summary": "Lista vendas por status",
        "parameters": [
          {
            "name": "status",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "enum": ["PENDENTE", "PAGO", "CANCELADO"]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Lista de vendas",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Sale"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/sales/{sale_id}/mark-as-pending": {
      "patch": {
        "summary": "Marca venda como pendente",
        "parameters": [
          {
            "name": "sale_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Status atualizado",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Sale"
                }
              }
            }
          }
        }
      }
    },
    "/sales/{sale_id}/mark-as-paid": {
      "patch": {
        "summary": "Marca venda como paga",
        "parameters": [
          {
            "name": "sale_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Status atualizado",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Sale"
                }
              }
            }
          }
        }
      }
    },
    "/sales/{sale_id}/mark-as-cancelled": {
      "patch": {
        "summary": "Marca venda como cancelada",
        "parameters": [
          {
            "name": "sale_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Status atualizado",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Sale"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Sale": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string"
          },
          "vehicle_id": {
            "type": "string"
          },
          "buyer_cpf": {
            "type": "string"
          },
          "sale_price": {
            "type": "number"
          },
          "payment_code": {
            "type": "string"
          },
          "payment_status": {
            "type": "string",
            "enum": ["PENDENTE", "PAGO", "CANCELADO"]
          },
          "created_at": {
            "type": "string",
            "format": "date-time"
          },
          "updated_at": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "SaleCreate": {
        "type": "object",
        "required": ["vehicle_id", "buyer_cpf", "sale_price", "payment_code"],
        "properties": {
          "vehicle_id": {
            "type": "string"
          },
          "buyer_cpf": {
            "type": "string"
          },
          "sale_price": {
            "type": "number"
          },
          "payment_code": {
            "type": "string"
          }
        }
      },
      "SaleUpdate": {
        "type": "object",
        "properties": {
          "vehicle_id": {
            "type": "string"
          },
          "buyer_cpf": {
            "type": "string"
          },
          "sale_price": {
            "type": "number"
          },
          "payment_code": {
            "type": "string"
          },
          "payment_status": {
            "type": "string",
            "enum": ["PENDENTE", "PAGO", "CANCELADO"]
          }
        }
      }
    }
  }
} 